{
  "name": "rumors-line-bot",
  "version": "0.0.1",
  "description": "Line bot that checks if a message contains internet rumor. Edit",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "dev": "pm2-dev ecosystem.dev.config.js",
    "postinstall": "babel src -d build; babel src/i18n/locales --out-dir build/i18n/locales --copy-files",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "preliff": "bash build-liff.sh",
    "liff": "gh-pages -d liff"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cofacts/rumors-line-bot.git"
  },
  "keywords": [
    "Rumor",
    "Mythbusting",
    "LINE bot"
  ],
  "author": "MrOrz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cofacts/rumors-line-bot/issues"
  },
  "homepage": "https://github.com/cofacts/rumors-line-bot#readme",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@line/bot-sdk": "^6.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-runtime": "^6.22.0",
    "googleapis": "^36.0.0",
    "grapheme-splitter": "^1.0.4",
    "i18n": "^0.8.3",
    "koa": "^2.5.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "node-fetch": "^2.0.0",
    "pm2": "^3.5.0",
    "raw-body": "^2.3.2",
    "redis": "^2.6.5",
    "rollbar": "^2.2.9",
    "string-similarity": "^3.0.0",
    "universal-analytics": "^0.4.16",
    "xxhashjs": "^0.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^23.0.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-stage-3": "^6.22.0",
    "coveralls": "^3.0.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^3.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-prettier": "^3.0.0",
    "gh-pages": "^2.0.1",
    "jest-cli": "^23.6.0",
    "prettier": "=1.13.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/__fixtures__/"
    ],
    "setupTestFrameworkScriptFile": "./setup-jest.js"
  },
  "engines": {
    "node": "10.x"
  }
}
